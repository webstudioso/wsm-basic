{
  "name": "wsm-basic",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "source": "src/index.js",
  "type": "module",
  "alias": {
    "/": "./src/lib"
  },
  "targets": {
    "main": {
      "optimize": true
    }
  },
  "scripts": {
    "test": "jest --collectCoverage=true",
    "coverage": "jest --coverage",
    "build": "parcel build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webstudioso/wsm-basic.git"
  },
  "author": "Webstudio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webstudioso/wsm-basic/issues"
  },
  "homepage": "https://github.com/webstudioso/wsm-basic#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@parcel/babel-preset-env": "^2.8.3",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.4.3",
    "parcel": "^2.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "coverageReporters": [
      "json",
      "text",
      "html",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,jsx,ts,tsx}",
      "!src/**/*/types.ts",
      "!src/**/store.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!<rootDir>/node_modules/",
      "!**/templates/**",
      "!**/template/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
